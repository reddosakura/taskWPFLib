<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Style="{DynamicResource MegaButton}" Content="Button" HorizontalAlignment="Left" Margin="490,338,0,0" VerticalAlignment="Top"/>
        <ListBox Style="{DynamicResource MegaListBox}" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="98,101,242,116"/>
        <DatePicker Style="{DynamicResource MegaDatePicker}"  HorizontalAlignment="Left" Margin="98,337,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.179,0.052"/>
        <TextBlock Style="{DynamicResource MegaTextBlock}" HorizontalAlignment="Left" Margin="231,341,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox Style="{DynamicResource MegaTextBox}" HorizontalAlignment="Left" Margin="318,339,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="backColor">
        <GradientStop Offset="0" Color="#F30000" />
        <GradientStop Offset="1" Color="#514CE8" />
    </LinearGradientBrush>
    <Style TargetType="DatePicker" x:Key="MegaDatePicker">
        <Setter Property="Background" Value="{StaticResource backColor}"/>
    </Style>
</ResourceDictionary>
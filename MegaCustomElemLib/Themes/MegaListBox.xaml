<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="backColor">
        <GradientStop Offset="0" Color="#0071F3" />
        <GradientStop Offset="1" Color="#00F331" />
    </LinearGradientBrush>
    <Style TargetType="ListBox" x:Key="MegaListBox">
        <Setter Property="Background" Value="{StaticResource backColor}"/>
    </Style>
</ResourceDictionary>
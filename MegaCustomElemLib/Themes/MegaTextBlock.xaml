<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1" x:Key="backColor">
        <GradientStop Offset="0" Color="#900BF6" />
        <GradientStop Offset="1" Color="#4EFB01" />
    </LinearGradientBrush>
    <Style TargetType="TextBlock" x:Key="MegaTextBlock">
        <Setter Property="Background" Value="{StaticResource backColor}"/>
    </Style>
</ResourceDictionary>
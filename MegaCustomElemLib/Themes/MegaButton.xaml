<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    

    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="backColor">
        <GradientStop Offset="0" Color="#d9a2c1" />
        <GradientStop Offset="1" Color="#900BF6" />
    </LinearGradientBrush>
    <Style TargetType="Button" x:Key="MegaButton">
        <Setter Property="Background" Value="{StaticResource backColor}"/>
    </Style>
</ResourceDictionary>